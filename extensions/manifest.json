{
  "manifest_version": 2,
  "name": "PostCrossing Tab Sorter",
  "version": "1.0",
  "description": "Sort open PostCrossing postcard tabs by their numeric id (e.g., CL-34269).",
  "permissions": [
    "tabs"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Sort Postcrossing Tabs",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}