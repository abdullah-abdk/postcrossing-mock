{
  "manifest_version": 2,
  "name": "PostCrossing Tab Sorter + Hybrid Search",
  "version": "1.1",
  "description": "Sort and hybrid-search PostCrossing postcard tabs.",
  "permissions": [
    "tabs"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "PostCrossing Tools",
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icon.png"
  }
}